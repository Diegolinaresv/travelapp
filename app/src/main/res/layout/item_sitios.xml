<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">
    <ImageView
        android:id="@+id/ivSitios"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tvSitioName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/ivSitios"
        android:layout_toRightOf="@+id/ivSitios"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="Desierto de la tatacoa" />

    <TextView
        android:id="@+id/tvDescripcionSitio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSitioName"
        android:layout_toEndOf="@+id/ivSitios"
        android:layout_toRightOf="@+id/ivSitios"
        android:textSize="15sp"
        tools:text="El Desierto de la Tatacoa es la segunda zona árida más extensa de Colombia después de la península de la Guajira, y es uno de los escenarios naturales más atractivos de Colombia" />

</RelativeLayout>
